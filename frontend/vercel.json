{
  "version": 2,
  "rootDirectory": "frontend",
  "installCommand": "npm ci --include=dev || npm install --include=dev",
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
